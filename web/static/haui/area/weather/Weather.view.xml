<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View controllerName="haui.area.weather.Weather" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:ma="sap.makit" xmlns:l="sap.ui.layout">
	<Page id="weatherPage"
		title="Wetter Daten"
		showNavButton="true"
		navButtonPress="handleNavButtonPress">
		<headerContent>
			<Button icon="sap-icon://refresh" press="handleRefreshPress" />
		</headerContent>
		<List>
			<items>
				<DisplayListItem id="temperatureData" label="Temperatur" value="{weatherModel>/temperature} {weatherModel>/temperatureUnit}" type="Navigation" press="handleLinePress" />
				<DisplayListItem id="humidityData" label="Luftfeuchtigkeit" value="{weatherModel>/humidity} {weatherModel>/humidityUnit}" type="Navigation" press="handleLinePress" />
				<DisplayListItem id="pressureData" label="Luftdruck" value="{weatherModel>/pressure} {weatherModel>/pressureUnit}" type="Navigation" press="handleLinePress" />
			</items>
		</List>
	</Page>
</mvc:View>