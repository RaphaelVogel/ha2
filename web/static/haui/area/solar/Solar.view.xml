<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View controllerName="haui.area.solar.Solar" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form">
	<Page id="SolarPage"
		title="Solaranlage"
		showNavButton="true"
		navButtonPress="handleNavButtonPress">
		<headerContent>
			<Button icon="sap-icon://refresh" press="handleRefreshPress" />
		</headerContent>
		<List>
			<items>
				<StandardListItem title="Aktuell produzierter Strom" info="{solarModel>/current} {solarModel>/currentUnit}" infoState="Success" />
				<StandardListItem title="Tages Produktion" info="{solarModel>/day} {solarModel>/dayUnit}" infoState="Success" />
				<StandardListItem title="Monats Produktion" info="{solarModel>/month} {solarModel>/monthUnit}" infoState="Success" />
				<StandardListItem title="Jahres Produktion" info="{solarModel>/year} {solarModel>/yearUnit}" infoState="Success" />
				<StandardListItem title="Gesammt produzierter Strom" info="{solarModel>/total} {solarModel>/totalUnit}" infoState="Success" />
				<StandardListItem info="Chart anzeigen" infoState="Success" type="Navigation" press="handleChartDisplay" />
			</items>
		</List>
	</Page>
</mvc:View>